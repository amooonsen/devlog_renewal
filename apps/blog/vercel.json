{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "cd ../.. && pnpm turbo build --filter=blog...",
  "outputDirectory": ".next",
  "installCommand": "cd ../.. && pnpm install",
  "ignoreCommand": "bash -c 'msg=$(git log -1 --pretty=%s); echo \"$msg\" | grep -q \"\\[skip blog\\]\" && exit 0; echo \"$msg\" | grep -q \"\\[deploy blog\\]\" && exit 1; git diff --quiet HEAD~1 HEAD apps/blog/ packages/ 2>/dev/null || exit 1'",
  "functions": {
    "app/api/**": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}